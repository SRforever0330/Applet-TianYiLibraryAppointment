.background{
  z-index: 1;
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
	margin: 0;
	opacity: 0.5;
}
.index_swiper{
  z-index: 2;
  position: relative;
}
.index_swiper swiper{
  width: 750rpx;
  height:500rpx;
  
}
.index_swiper swiper image{
  width: 100%;
}
.swiper-btn{
	position: absolute;
	top: 15rpx;
	display: flex;
	right: 30rpx;
	font-size: 12pt;
  color: #eb4500;
  background:rgba(0, 4, 4, 0.103);
  border-radius: 10%;
}
.swiper-btn .iconfont{
	font-size: 18pt;
	vertical-align: -7%;
  margin-right: 3rpx;
}
.scan-box{
  z-index: 3;
  display: flex;
}
.notice-contain{
  z-index: 2;
	margin: 100rpx 0 34rpx 0;
	padding: 0 24rpx;
  color: #4b4b4b;
  display: flex;
  flex-direction: column;
}
.notice-contain .title{
  z-index: 5;
	text-align: center;
	font-size: 45rpx;
	margin-bottom: 34rpx;
	font-weight: 600;
}
.notice-contain .list{
  z-index: 2;
	padding: 24rpx 30rpx;
	font-weight: 550;
	font-size: 36rpx;
	line-height: 40rpx;
	position: relative;
}

.list-border{
  z-index: 2;
	position: absolute;
	height: 31rpx;
	width: 31rpx;
	font-weight: 500;
	border-radius: 5rpx;
}

.border1{
	z-index: 2;
	left: 0;
	top: 0;
	border-left: 0.5rpx solid #c6c6c6;
	border-top: 0.5rpx solid #c6c6c6;
}
.border2{
  z-index: 2;
	right: 0;
	top: 0;
	border-right: 0.5rpx solid #c6c6c6;
	border-top: 0.5rpx solid #c6c6c6;
}
.border3{
  z-index: 2;
	right: 0;
	bottom: 0;
	border-right: 0.5rpx solid #c6c6c6;
	border-bottom: 0.5rpx solid #c6c6c6;
}
.border4{
  z-index: 2;
	left: 0;
	bottom: 0;
	border-left: 0.5rpx solid #c6c6c6;
	border-bottom: 0.5rpx solid #c6c6c6;
}

.notice-contain .list .item{
  z-index: 2;
	margin-bottom: 30rpx;
}
.notice-contain .list .item:last-child{
  z-index: 2;
	margin-bottom: 0;
}