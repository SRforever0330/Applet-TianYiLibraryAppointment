.item{
  width: 96%;
  height: 300rpx;
  display: flex;
  align-items: center;
  margin: auto;
  justify-content: space-around;
  box-shadow: 4rpx 4rpx 2rpx 2rpx #8888;
  border-radius: 10rpx;
  margin-top: 10rpx;
  border:1rpx solid #fff;
}
image{
  margin-left: 20rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.item .info{
  margin-left: 20rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  
}
.item .info .room_name{
  flex: 3;
  font-size: 40rpx;
  font-weight: 600rpx;
}
.item .info .time{
  flex: 1;
}
.item .info .seat_num{
  display: flex;
  align-items: center;
  flex: 2;
  font-size: 32rpx;
}
.item .info .seat_num .num{
  color:#666;
}
.item .info .seat_num .empty{
  color:#eb4450;
}
.item .info .seat_num .word{
  margin-left: 30rpx;
  color: #eb4450;
}
.appointment{
  margin-right: 30rpx;
  font-size: medium;
  color: #eb4450;
}
.empty2{
  color: #666;
}